<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_Correlatividad">

    <ListView
        android:id="@+id/listacorrelatividad"
        android:layout_width="wrap_content"
        android:layout_height="309dp"
        android:layout_marginTop="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Materiamostrar">

    </ListView>

    <Switch
        android:id="@+id/swt_aprobado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="115dp"
        android:checked="false"
        android:text="APROBADO"
        android:textOff="NO"
        android:textOn="SI"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listacorrelatividad" />

    <TextView
        android:id="@+id/Materiamostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="MATERIA"
        app:layout_constraintBottom_toTopOf="@+id/listacorrelatividad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>